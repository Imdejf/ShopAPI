@page
@model Shop.MVC.Pages.Admin.Order.OrderListModel
@{
    ViewData["Title"] = "OrderList";
}

@{ 
    var status = HttpContext.Request.Query["status"];
    var cancelled = "text-primary";
    var completed = "text-primary";
    var inProcess = "text-primary";

    if(status == cancelled)
    {
        cancelled = "active text-white";
    }
    else
    {
        if(status == "completed")
        {
            completed = "active text-white";
        }
        else
        {
            inProcess = "active text-whtie";
        }
    }
 }

<div class="border backgroundWhite container">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-page="OrderList" asp-route-status="cancelled">
                    <li class="list-group-item @cancelled"> Cnacelled </li>
                </a>
                <a style="text-decoration:none;" asp-page="OrderList" asp-route-status="completed">
                    <li class="list-group-item @completed"> Completed </li>
                </a>
                <a style="text-decoration:none;" asp-page="OrderList" asp-route-status="inProecess">
                    <li class="list-group-item @inProcess"> Inprocess </li>
                </a>
            </ul>
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Order Total</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}